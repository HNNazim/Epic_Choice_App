<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/themebg2_removebg_preview">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLlogoLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLlogoRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLlogoTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLlogoBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:id="@+id/IVLogoe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_image"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/GLlogoBottom"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/GLlogoRight"
        app:layout_constraintStart_toStartOf="@id/GLlogoLeft"
        app:layout_constraintTop_toTopOf="@id/GLlogoTop"
        app:srcCompat="@drawable/logo_e" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLtextLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLtextRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLtextTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLtextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37" />

    <TextView
        android:id="@+id/textView2"
        style="@style/h4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/sukarblack1"
        android:text="Let's LOGIN"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/GLtextBottom"
        app:layout_constraintEnd_toEndOf="@id/GLtextRight"
        app:layout_constraintStart_toStartOf="@id/GLtextLeft"
        app:layout_constraintTop_toTopOf="@id/GLtextTop" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLtext2Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLtex2tBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLtext2Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63" />

    <TextView
        android:id="@+id/textView3"
        style="@style/h5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/register"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/GLtex2tBottom"
        app:layout_constraintEnd_toEndOf="@id/GLtext2Right"
        app:layout_constraintStart_toStartOf="@id/GLtextLeft"
        app:layout_constraintTop_toTopOf="@id/GLtext2Top" />

    <Button
        android:id="@+id/logButtonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sukarblack1"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/GLtext2Right"
        app:layout_constraintTop_toBottomOf="@id/GLtextBottom"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLemailTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLemailBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49" />

    <EditText
        android:id="@+id/ETEmailAddressLogin"
        style="@style/editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/GLemailBottom"
        app:layout_constraintEnd_toEndOf="@id/GLtextRight"
        app:layout_constraintStart_toStartOf="@id/GLtextLeft"
        app:layout_constraintTop_toTopOf="@id/GLemailTop"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLpasswordTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLpasswordBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <EditText
        android:id="@+id/ETPasswordLogin"
        style="@style/editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/GLpasswordBottom"
        app:layout_constraintEnd_toEndOf="@id/GLtextRight"
        app:layout_constraintStart_toStartOf="@id/GLtextLeft"
        app:layout_constraintTop_toTopOf="@id/GLpasswordTop"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TVForgotPassword"
        style="@style/h5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@id/GLForgotPWBottom"
        app:layout_constraintStart_toStartOf="@id/GLtextLeft"
        app:layout_constraintTop_toTopOf="@id/GLForgotPWTop"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLregButtonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLregButtonBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74" />

    <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/ButtonLogin"
        style="@style/peachButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="LOGIN"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/GLregButtonBottom"
        app:layout_constraintEnd_toEndOf="@id/GLtextRight"
        app:layout_constraintStart_toStartOf="@id/GLtextLeft"
        app:layout_constraintTop_toTopOf="@id/GLregButtonTop"
        app:spinning_bar_color="@color/peach" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLimgButtonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLimgButtonBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLimgButtonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />


    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Facebook logo button"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/GLimgButtonBottom"
        app:layout_constraintEnd_toEndOf="@id/GLimgButtonRight"
        app:layout_constraintStart_toStartOf="@id/GLtextLeft"
        app:layout_constraintTop_toTopOf="@id/GLimgButtonTop"
        app:srcCompat="@drawable/fb_logo" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sukarblack2"
        android:text="Facebook"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/GLimgButtonBottom"
        app:layout_constraintStart_toStartOf="@id/GLimgButtonRight"
        app:layout_constraintTop_toTopOf="@id/GLimgButtonTop"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Google logo button"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/GLimgButtonBottom"
        app:layout_constraintEnd_toEndOf="@id/GLlogoRight"
        app:layout_constraintTop_toTopOf="@id/GLimgButtonTop"
        app:srcCompat="@drawable/google_logo" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sukarblack2"
        android:text="Google"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/GLimgButtonBottom"
        app:layout_constraintStart_toStartOf="@id/GLlogoRight"
        app:layout_constraintTop_toTopOf="@id/GLimgButtonTop" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLForgotPWTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLForgotPWBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />

</androidx.constraintlayout.widget.ConstraintLayout>






