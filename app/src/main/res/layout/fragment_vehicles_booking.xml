<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- res/layout/activity_booking.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/vehicleImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/vehicleNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Name"
            android:textSize="20sp"
            android:padding="8dp"
            android:fontFamily="@font/sukarblack2"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/vehiclePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Price"
            android:padding="8dp"
            android:fontFamily="@font/sukarblack2"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/checkInDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in Date"
            android:textSize="18sp"
            android:padding="8dp"
            android:fontFamily="@font/sukarblack3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/selectCheckInDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Check-in Date"
            android:backgroundTint="@color/peach"
            android:fontFamily="@font/sukarblack2"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/checkOutDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out Date"
            android:textSize="18sp"
            android:padding="8dp"
            android:fontFamily="@font/sukarblack3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/selectCheckOutDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Check-out Date"
            android:backgroundTint="@color/peach"
            android:fontFamily="@font/sukarblack2"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sukarblack2"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTotalPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="20dp"
                android:layout_marginStart="140dp"
                android:fontFamily="@font/sukarblack2"
                android:textSize="20sp"
                android:textColor="@color/black"/>



        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/backBookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/peach"
        android:fontFamily="@font/sukarblack2"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/confirmBookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/peach"
        android:layout_marginStart="140dp"
        android:fontFamily="@font/sukarblack2"
        android:textSize="15sp"/>



</LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>