<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="h4">
        <item name="android:fontFamily">@font/sukarblack2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/sukarblack3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/sukarblack3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>


    <style name="peachButtonStyle">
        <item name="android:background">@drawable/gradient_buttonbackground</item>
        <item name="android:fontFamily">@font/sukarblack1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/sukarblack1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="editText">
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sukarblack3</item>
    </style>

    <style name="h5">
        <item name="android:fontFamily">@font/sukarblack3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h5TextSize</item>
    </style>

    <dimen name="h4TextSize">25sp</dimen>
    <dimen name="h2TextSize">15sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>
    <dimen name="h5TextSize">20sp</dimen>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="textFillColor">@color/black</item>
        <item name="fontFamily">@font/sukarblack2</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>